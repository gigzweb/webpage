<!doctype html>
<html>
<head>
  
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
  <script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
  <link href="views/css/addstudent.css" rel="stylesheet" type="text/css">
  <title>Emerald International Schools</title>
  <style>



    body {
      background-color: #ecedec;
      
    }
  </style>
</head>
<body>
<% include ./includes/navbar %>
<br>
<br>
<br>
<br>
<br>
<br>
<div class="container">
     
   <h3 class="well">Registration Form</h3>
  <div class="col-md-12 well">
  <div class="row">
        <form method="post" action="">
          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-4 form-group">
                <label>Full Name</label>
                <input type="text" placeholder="Enter Full Name Here.." class="form-control" name="student_name">
              </div>
              <div class="col-sm-4 form-group">
                <label>Sex</label>
                <input type="text" placeholder="Enter Sex Here.." class="form-control" name="sex">
              </div>
            </div>
            <div class="col-sm-4 form-group">
                <label>Date of Birth</label>
                <input type="text" placeholder="YYYY-MM-DD." class="form-control" name="dob">
              </div>
            </div>
            </div>          
            <div class="form-group">
              <label>Address</label>
            <textarea placeholder="Enter Address Here.." rows="3" class="form-control" name="address"></textarea>
            </div>  
            <div class="row">
              <div class="col-sm-4 form-group">
                <label>Nationality</label>
                <input type="text" placeholder="Enter Country  Here.." class="form-control" name="country">
              </div>  
              <div class="col-sm-4 form-group">
                <label>State</label>
                <input type="text" placeholder="Enter State  Here.." class="form-control" name="state">
              </div>  
              <div class="col-sm-4 form-group">
                <label>L.G.A</label>
                <input type="text" placeholder="Enter LGA  Here.." class="form-control" name="lga">
              </div>    
            </div>
            <div class="row">


                <div class="col-sm-6 form-group">
                <label>Title</label>
                <input type="text" placeholder="Enter Designation Here.." class="form-control" name="title">
              </div>    
            </div>            
          <div class="form-group">
            <label>Phone Number</label>
            <input type="text" placeholder="Enter Phone Number Here.." class="form-control" name="phone">
          </div>    
          <div class="form-group">
            <label>Email Address</label>
            <input type="text" placeholder="Enter Email Address Here.." class="form-control" name="email">
          </div>  
          
          <button type="submit" class="btn btn-lg btn-info">Submit</button>         
          </div>
        </form> 
        </div>
  </div>
  </div>
  <br><br>
<% include ./includes/footer %>
</body>
</html>